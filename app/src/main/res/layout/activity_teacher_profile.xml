<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".TeacherProfile"
    android:background="#FBEDDD"
    android:layout_centerHorizontal="true" >

    <ImageView
        android:id="@+id/ImgBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        app:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/Heading1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teacher Profile"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>
    <ImageView
        android:id="@+id/proPic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Heading1"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/EditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:layout_below="@id/proPic"
        android:text="Edit Profile"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="25sp"
        android:background="#FF9800"
        android:clickable="true"
        android:layout_margin="10px"/>
    <EditText
        android:id="@+id/TeacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditProfile"
        android:text="Teacher Name"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/TeacherID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TeacherName"
        android:text="Teacher ID"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/TeacherNIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TeacherID"
        android:text="Teacher NIC"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/TeacherContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TeacherNIC"
        android:text="Teacher Contact"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <Button
        android:id="@+id/Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="650dp"
        android:text="save"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#000000"
        android:backgroundTint="#DF7B05"/>


</RelativeLayout>